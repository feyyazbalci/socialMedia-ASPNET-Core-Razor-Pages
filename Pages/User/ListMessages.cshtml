@page
@model termProject_201811010.Pages.User.ListMessagesModel
@{

}


    <div class="row">
        @if (Model.UserMessage.Count > 0)
        {

            <h2 class="text-center my-4">Your messages</h2>
            @foreach (var item in Model.UserMessage)
            {
                var sender = Model.users.FirstOrDefault(f => f.UserId == item.SenderId );
                <div class="col-sm-6 my-3">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">@*@sender.FirstName*@</h5>
                            <p class="card-text">@item.Text</p>
                            <div class="d-flex flex-row-reverse">
                                <p class="">@item.MessageTime</p>
                            </div>
                            
                        </div>
                    </div>
                </div>
            }

        }
        else
        {
            <h2 class="text-center mt-4">You don't have any message</h2>
        }
    </div>




@page
@model termProject_201811010.Pages.Post.CreateModel

@{
    ViewData["Title"] = "Create";
}
<style>
    main{
        margin: 0 auto;
        text-align: center;
    }
    .formContainer {
        display: flex;
        justify-content: center;
        align-content: center;
        margin: 0 auto;
        max-width: 400px;
        padding: 30px;
        background: white;
        border: 2px medium green;
        border-radius: 0.3rem;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
    }
    .form-group{
        margin-bottom: 10px;
    }
    a {
        text-decoration: none;
    }
    .btn2 {
        background: #5cc9f8;
        border-color: transparent;
        font-size: 1rem;
        text-transform: capitalize;
        margin: 0 0.5rem;
        letter-spacing: 1px;
        padding: 0.375rem 0.75rem;
        color: white;
        cursor: pointer;
        font-weight: 600;
        border-radius: 0.2rem;
    }
    hr{
        color: white;
    }
    
</style>

<main>
    <h1>Share a post</h1>
    <hr />
</main>


<div class="formContainer">
    <form method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="UserPost.Message" class="control-label"></label>
            <input asp-for="UserPost.Message" class="form-control" required/>
            <span asp-validation-for="UserPost.Message" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input asp-for="FileUpload.FormFile" type="file" class="form-control" required><br>
            <label asp-for="FileUpload.FormFile"></label>
            <span asp-validation-for="FileUpload.FormFile" class="text-danger"></span>

        </div>

        <div class="form-group">
            <input type="submit" value="Create" class="btn2" />
            <button class="btn2"><a class="text-light" asp-page="Index">Back to List</a></button>
        </div>
        @*<div>
            <button class="btn2"><a class="text-light" asp-page="Index">Back to List</a></button>
        </div>*@
    </form>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

@*<h1>@ViewData["Title"]</h1>*@

<style>
    body {
        
    }
    .formContainer {
        background: white;
        max-width: 500px;
        margin: 20px auto;
        display: flex;
        justify-content: center;
        align-items: center;
        letter-spacing: 0.1rem;
        text-align: center;
        padding: 30px;
        border-radius: 0.3rem;
        box-shadow: 4px 10px 5px 0px rgba(0, 0, 0, 0.5);
    }
    .formContainer h2 {
            margin-bottom: 8px;
        }
    .formContainer input {
            margin-bottom: 10px;
            width: 400px;
     }
    .form-control {
        display: block;
        width: 0%;
    }
    .btn {
        transition: all linear 0.5s;
    }
        .btn:hover {
            background: #4f5dfb;
        }
</style>

<div class="row">
    <div class="formContainer">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" enctype="multipart/form-data">
            <h2>Create a new account</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-floating">
                <input asp-for="Input.FirstName" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.FirstName"></label>
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>


            <div class="form-floating">
                <input asp-for="Input.LastName" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.LastName"></label>
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>

            <div class="form-floating">
                <input asp-for="Input.City" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.City"></label>
                <span asp-validation-for="Input.City" class="text-danger"></span>
            </div>

            <div class="form-floating">
                <input type="date" asp-for="Input.BirthDate" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.BirthDate"></label>
                <span asp-validation-for="Input.BirthDate" class="text-danger"></span>
            </div>




            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="FileUpload.FormFile" type="file" class="form-control" aria-required="true"><br>
                <label asp-for="FileUpload.FormFile"></label>
                <span asp-validation-for="FileUpload.FormFile" class="text-danger"></span>

            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg">Register</button>
        </form>
    </div>
   
</div>











@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
